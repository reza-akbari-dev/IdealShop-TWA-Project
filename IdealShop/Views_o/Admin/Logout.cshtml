@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h2 class="text-danger">You have been logged out</h2>
            <p class="mt-3">Thank you for using the system. You can log in again if needed.</p>
            <a asp-action="Login" class="btn btn-primary mt-2">Login Again</a>
        </div>
    </div>
</div>
